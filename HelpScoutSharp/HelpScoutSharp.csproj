<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>2.6.3</Version>
    <Company>Better Reports</Company>
    <Product>Help Scout API Client for .NET</Product>
    <Authors>Better Reports</Authors>
    <RepositoryUrl>https://github.com/better-reports/HelpScoutSharp</RepositoryUrl>
    <PackageTags>Help Scout, HelpScout</PackageTags>
    <PackageProjectUrl>https://github.com/better-reports/HelpScoutSharp</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Help Scout API Client for .NET</Description>

    <!-- Ensure the XML doc file is generated -->
      <GenerateDocumentationFile>true</GenerateDocumentationFile>
		
	   <!-- This prevents the warning about missing XML documentation on public members -->
		<NoWarn>$(NoWarn);1591</NoWarn>

		<!-- Embed PDBs in DLL -->
	    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Flurl" Version="2.8.2" />
    <PackageReference Include="System.Text.Json" Version="4.7.2" />
  </ItemGroup>

</Project>
